<head>
  <title>amazon wishlists</title>
  <link rel="stylesheet" href="/sass/style.css" type="text/css"/>
  <link href='https://fonts.googleapis.com/css?family=Raleway:300,500,200' rel='stylesheet' type='text/css'>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
  <script src="/js/jquery.fittext.js"></script>
  <script>
    jQuery("#bliss").fitText(1.2, { minFontSize: '20px', maxFontSize: '40px' });
  </script>
</head>

<body>
  <div class="container">
    <div class="table-set">
      <nav>
          <div id="bliss">
            Bliss
          </div>
          <div class="bliss-details">
            <span class="lists">Lists</span>
            <span>Wish No More</span>
          </div>
          <!-- <div class="buttons">
            <button class="sign-up">Sign Up to See Your Wishlists</button>
          </div> -->
      </nav>
      <section>
        <div class="wishlist-title">
          <img src="/images/heart.png" class="heart"/>
          <span id="title-text"><%= wishlist_details[:title] %></span>
        </div>
        <div class="wishlist-details">
          <div class="countdown">Arrival Date: <%= wishlist_details[:due_date] %> </div>
          <div class="countdown">Arrives in <%= wishlist_details[:time_until] %> </div>
          <div class="location">Location: <%= wishlist_details[:location] %></div>

        </div>
        <% wishlist_items.each do |item| %>
          <div class="wishlist-item-container">
            <div class="wishlist-item">
              <span class="product-image"><a href="<%= item[:link] %>"><%= item[:image] %></a></span>
              <span class="product-data">
                <%= item[:name] %>
                <br/>
                <%= item[:rating] %>
              </span>
            </div>
            <div class="buy-product">
              <div class="buy-items">
                <div>
                  <a href="<%= item[:link] %>"><button class="buy-on-amazon">Buy on Amazon</button></a>
                </div>
                <div class="price">
                  <span>Only  </span><span id="price"><%= item[:price] %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </section>
    </div>
  </div>
</body>
